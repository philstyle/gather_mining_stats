#!/bin/bash


echo "------------------------------------------------------------------------"
echo "----------------------------  BATHROOM  --------------------------------"
echo "------------------------------------------------------------------------"
curl --silent -XGET http://10.144.24.53:3333 > /tmp/BATHROOM
cat /tmp/BATHROOM | html2text -nobs -width 200 | tail -10


echo "------------------------------------------------------------------------"
echo "----------------------------  MONOLITH  --------------------------------"
echo "------------------------------------------------------------------------"
curl --silent -XGET http://10.144.24.233:3333 > /tmp/MONOLITH
cat /tmp/MONOLITH | html2text -nobs -width 200 | tail -10
echo "------------------------------------------------------------------------"
