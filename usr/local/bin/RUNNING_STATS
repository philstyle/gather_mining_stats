#!/bin/bash


/usr/local/bin/ETHEREUM_WALLET_STATS | egrep "^1080|^760|^RX480|^airbuntu|^cubuntu|^monolith" > /tmp/ETH_RUNSTAT
/usr/local/bin/ETC_WALLET_STATS | egrep "^1080|^760|^RX|^airbuntu|^cubuntu|^monolith" > /tmp/ETC_RUNSTAT
/usr/local/bin/EXP_WALLET_STATS | egrep "^1080|^760|^RX|^airbuntu|^cubuntu|^monolith" > /tmp/EXP_RUNSTAT
/usr/local/bin/MUSICOIN_WALLET_STATS | egrep "^1080|^760|^RX|^airbuntu|^cubuntu|^monolith" > /tmp/MUS_RUNSTAT
/usr/local/bin/UBIQ_WALLET_STATS | egrep "^1080|^760|^RX|^airbuntu|^cubuntu|^monolith" > /tmp/UBI_RUNSTAT
/usr/local/bin/DIGIBYTE_WALLET_STATS | egrep "^1080|^760|RX480|airbuntu|cubuntu|^monolith" > /tmp/DIG_RUNSTAT


STAT() {
 FILE=$1
 NAME=$2
 while IFS= read -r line; do
  printf "%s\t%s" ${NAME} "${line}"
  echo ""
 done < ${FILE}
}

printf "%s\t%s\t\t%s\t\t%s\t\t%s\t%s" "COIN" "HOST" "HR1" "HR2" "AUX1" "AUX2"
echo ""
echo "--------------------------------------------------------------------"
STAT "/tmp/ETH_RUNSTAT" ETH
STAT "/tmp/ETC_RUNSTAT" ETC
STAT "/tmp/EXP_RUNSTAT" EXP
STAT "/tmp/MUS_RUNSTAT" MUS
STAT "/tmp/UBI_RUNSTAT" UBI
STAT "/tmp/DIG_RUNSTAT" DIG
